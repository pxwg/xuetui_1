---
interface Props {
  baseUrl?: string;
  tags: string[];
}

const {
  tags,
  baseUrl = import.meta.env.BASE_URL +
    (import.meta.env.BASE_URL.endsWith("/") ? "article" : "/article"),
} = Astro.props;
const postByTag = (tag: string) => {
  const params = new URLSearchParams();
  params.set("search", tag);
  return `${baseUrl}?${params}`;
};
---

<ul class="tags" aria-label="Tags">
  {
    tags.map((tag) => (
      <li>
        <a href={postByTag(tag)}>#{tag}</a>
      </li>
    ))
  }
</ul>
